<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.detailfragments.ArtistDetailFragment">

    <ImageView
        android:id="@+id/artist_detail_cover"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/artist_detail_list_albums"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/artist_detail_list_albums"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@id/artist_detail_cover"
        app:layout_constraintBottom_toTopOf="artist_detail_list_track"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"

        android:id="@+id/artist_detail_list_track"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/artist_detail_list_albums"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>